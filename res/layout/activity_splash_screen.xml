<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreendegrad"
    android:paddingRight="10dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/urd8splashscreen" />

    <TextView
        android:id="@+id/tvURD8Splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="N&apos;oubliez plus l&apos;essentiel"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/tvURD8Splash"
        android:layout_marginTop="32dp"
        android:background="#FFF"
        android:ems="10"
        android:hint="Nom d&apos;utilisateur"
        android:inputType="textNoSuggestions" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etMdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etLogin"
        android:layout_alignRight="@+id/etLogin"
        android:layout_centerVertical="true"
        android:background="#FFF"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/etValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etMdp"
        android:layout_alignRight="@+id/tvURD8Splash"
        android:layout_below="@+id/etMdp"
        android:layout_marginTop="18dp"
        android:background="#00688B"
        android:onClick="connect"
        android:text="Login"
        android:textColor="#000" />

</RelativeLayout>
